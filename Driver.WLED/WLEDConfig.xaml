<UserControl x:Class="Driver.WLED.WLEDConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Driver.WLED"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label >IP Address</Label>
        <TextBox Grid.Row="1" Width="200" Height="30" Text="{Binding IP}"></TextBox>
        <Label Grid.Row="2">Port</Label>
        <TextBox Grid.Row="3" Width="200" Height="30" Text="{Binding Port}"></TextBox>
        <Label Grid.Row="4">Number of LEDs</Label>
        <StackPanel Grid.Row="5" Orientation="Horizontal">
            <Slider Width="190"  Minimum="1" Maximum="490" Value="{Binding LedCount}"></Slider>
            <Label Content="{Binding LedCount}"></Label>
        </StackPanel>
    </Grid>
</UserControl>
